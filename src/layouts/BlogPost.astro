---
import Layout from './Layout.astro';

interface Props {
  title: string;
  date: string;
  tags?: string[];
  description?: string;
}

const { title, date, tags = [], description } = Astro.props;
---

<Layout title={`${title} | Anton Roesler`} description={description}>
  <article class="blog-post">
    <header class="post-header">
      <div class="post-meta">
        <time datetime={date}>{date}</time>
        <div class="post-tags">
          {tags.map(tag => (
            <span class="post-tag">{tag}</span>
          ))}
        </div>
      </div>
      <h1 class="post-title">{title}</h1>
    </header>
    
    <div class="post-content">
      <slot />
    </div>
    
    <footer class="post-footer">
      <a href="/blog" class="back-link">‚Üê Back to all posts</a>
    </footer>
  </article>
</Layout>

<style is:global>
  .blog-post {
    max-width: var(--content-width);
    margin: 0 auto;
  }

  .post-header {
    margin-bottom: var(--space-4);
  }

  .post-meta {
    margin-bottom: var(--space-2);
    display: flex;
    align-items: center;
    gap: var(--space-2);
    flex-wrap: wrap;
  }

  time {
    color: var(--color-text-secondary);
    font-size: 0.9rem;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .post-tag {
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    background-color: rgba(103, 58, 183, 0.2);
    color: var(--color-accent-light);
    border-radius: 4px;
  }

  .post-title {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: var(--space-3);
  }

  .post-content {
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .post-content h2 {
    font-size: 1.8rem;
    margin-top: var(--space-5);
    margin-bottom: var(--space-3);
  }

  .post-content h3 {
    font-size: 1.5rem;
    margin-top: var(--space-4);
    margin-bottom: var(--space-2);
  }

  .post-content p {
    margin-bottom: var(--space-3);
  }

  .post-content ul, 
  .post-content ol {
    margin-bottom: var(--space-3);
    padding-left: var(--space-3);
  }

  .post-content li {
    margin-bottom: var(--space-1);
  }

  .post-content blockquote {
    border-left: 4px solid var(--color-accent);
    padding-left: var(--space-2);
    margin-left: 0;
    margin-right: 0;
    font-style: italic;
    color: var(--color-text-secondary);
  }

  .post-content img {
    max-width: 100%;
    border-radius: 8px;
    margin: var(--space-3) 0;
  }

  .post-footer {
    margin-top: var(--space-5);
    padding-top: var(--space-3);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .back-link {
    display: inline-block;
    font-weight: 500;
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }
    
    .post-content {
      font-size: 1rem;
    }
  }
</style>
