<script>
  document.querySelector('.read-more-btn')?.addEventListener('click', function(e) {
    const btn = /** @type {HTMLButtonElement} */(e.target);
    const expandedContent = /** @type {HTMLElement} */(document.querySelector('.expanded-content'));
    
    if (expandedContent.style.display === 'none') {
