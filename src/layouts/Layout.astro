---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Anton Roesler | MLOps Engineer",
  description = "MLOps Engineer specializing in scalable machine learning in practice" 
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Roboto+Mono:wght@400;500;700&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body>
    <div class="site-container">
      <Navigation />
      <main>
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  /* CSS Reset and Global Styles */
  *, *::before, *::after {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  :root {
    /* Color Variables */
    --color-bg: #0b0c1b;
    --color-accent: #673ab7;
    --color-accent-light: #7e57c2;
    --color-text-primary: #ffffff;
    --color-text-secondary: #9fa8da;
    --color-card-bg: #13152e;
    --color-code-bg: #1a1c35;
    
    /* Spacing Variables (8px system) */
    --space-1: 0.5rem;  /* 8px */
    --space-2: 1rem;    /* 16px */
    --space-3: 1.5rem;  /* 24px */
    --space-4: 2rem;    /* 32px */
    --space-5: 3rem;    /* 48px */
    --space-6: 4rem;    /* 64px */
    
    /* Typography */
    --font-mono: 'Roboto Mono', monospace;
    --font-sans: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    
    /* Content Width */
    --content-width: 750px;
    
    /* Animations */
    --transition-normal: 0.3s ease;
    --transition-fast: 0.15s ease;
  }

  html {
    font-family: var(--font-sans);
    background: var(--color-bg);
    color: var(--color-text-primary);
    font-size: 16px;
    line-height: 1.5;
    scroll-behavior: smooth;
  }

  body {
    min-height: 100vh;
  }

  h1, h2, h3, h4, h5, h6 {
    line-height: 1.2;
    margin-bottom: var(--space-2);
    font-weight: 700;
  }

  h1 {
    font-size: 2.5rem;
  }

  h2 {
    font-size: 2rem;
  }

  h3 {
    font-size: 1.5rem;
  }

  p {
    margin-bottom: var(--space-2);
  }

  a {
    color: var(--color-accent);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  a:hover {
    color: var(--color-accent-light);
  }

  img {
    max-width: 100%;
    height: auto;
  }

  code {
    font-family: var(--font-mono);
    background-color: var(--color-code-bg);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.9em;
  }

  pre {
    background-color: var(--color-code-bg);
    padding: var(--space-2);
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: var(--space-3);
  }

  pre code {
    background-color: transparent;
    padding: 0;
  }

  /* Layout */
  .site-container {
    width: 100%;
    max-width: var(--content-width);
    margin: 0 auto;
    padding: 0 var(--space-2);
  }

  main {
    padding: var(--space-6) 0;
  }

  /* Utility Classes */
  .text-secondary {
    color: var(--color-text-secondary);
  }

  .mono {
    font-family: var(--font-mono);
  }

  .section {
    margin-bottom: var(--space-5);
  }
</style>
