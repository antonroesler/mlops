---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const sortedPosts = posts.sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime());
---

<Layout title="Blog | Anton Roesler" description="MLOps articles, tutorials, and insights on machine learning operations">
  <div class="blog-header">
    <h1>Blog</h1>
    <p class="text-secondary">Thoughts, tutorials, and insights on MLOps and machine learning engineering</p>
  </div>

  <section class="blog-posts">
    {sortedPosts.map(post => (
      <a href={`/blog/${post.slug}`} class="post-card">
        <article>
          <div class="post-meta">
            <span class="post-date">{post.data.date}</span>
            <div class="post-tags">
              {post.data.tags.map(tag => (
                <span class="post-tag">{tag}</span>
              ))}
            </div>
          </div>
          <h2 class="post-title">{post.data.title}</h2>
          <p class="post-excerpt">{post.data.description}</p>
          <span class="read-more">Read more â†’</span>
        </article>
      </a>
    ))}
  </section>
</Layout>

<style>
  .blog-header {
    margin-bottom: var(--space-5);
    text-align: center;
  }

  .blog-posts {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .post-card {
    color: var(--color-text-primary);
    background-color: var(--color-card-bg);
    border-radius: 8px;
    overflow: hidden;
    padding: var(--space-3);
    transition: transform var(--transition-normal), box-shadow var(--transition-normal);
    display: block;
    text-decoration: none;
  }

  .post-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
  }

  .post-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-2);
    flex-wrap: wrap;
    gap: var(--space-1);
  }

  .post-date {
    color: var(--color-text-secondary);
    font-size: 0.85rem;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .post-tag {
    font-size: 0.7rem;
    padding: 0.2rem 0.5rem;
    background-color: rgba(103, 58, 183, 0.2);
    color: var(--color-accent-light);
    border-radius: 4px;
  }

  .post-title {
    margin-bottom: var(--space-2);
    font-size: 1.5rem;
    line-height: 1.3;
  }

  .post-excerpt {
    color: var(--color-text-secondary);
    font-size: 1rem;
    margin-bottom: var(--space-2);
  }

  .read-more {
    color: var(--color-accent);
    font-size: 0.9rem;
    font-weight: 500;
    transition: color var(--transition-fast);
  }

  .post-card:hover .read-more {
    color: var(--color-accent-light);
  }

  @media (max-width: 768px) {
    .post-meta {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
