<header class="header">
  <nav class="nav">
    <div class="logo">
      <a href="/">
        <span class="logo-text mono" style="color: var(--color-accent);">ANTON RÖSLER</span>
      </a>
    </div>
    <ul class="nav-links">
      <li><a href="/" class="nav-link">Home</a></li>
      <li><a href="/blog" class="nav-link">Blog</a></li>
      <li><a href="/projects" class="nav-link disabled">Projects</a></li>
      <li>
        <button class="theme-toggle" aria-label="Toggle theme">
          <span class="theme-toggle-icon">🌙</span>
        </button>
      </li>
    </ul>
  </nav>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    width: 100%;
    z-index: 100;
    background-color: var(--color-bg);
    border-bottom: 1px solid var(--color-card-bg);
    transition: background-color var(--transition-normal), border-color var(--transition-normal);
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80px;
  }

  .logo-text {
    font-size: 1.25rem;
    font-weight: 700;
    letter-spacing: 1px;
    transition: color var(--transition-normal);
  }

  .nav-links {
    display: flex;
    list-style: none;
    gap: var(--space-3);
    align-items: center;
  }

  .nav-link {
    position: relative;
    color: var(--color-text-primary);
    font-size: 1rem;
    transition: color var(--transition-normal);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 2px;
    background-color: var(--color-accent);
    transition: width var(--transition-normal), background-color var(--transition-normal);
  }

  .nav-link:hover::after,
  .nav-link.active::after {
    width: 100%;
  }

  .nav-link.disabled {
    color: var(--color-text-secondary);
    opacity: 0.6;
    cursor: not-allowed;
  }

  .nav-link.disabled:hover::after {
    width: 0;
  }

  .theme-toggle {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-primary);
    transition: transform var(--transition-fast), color var(--transition-normal);
    line-height: 1;
    width: 24px;
    height: 24px;
  }

  .theme-toggle:hover {
    transform: scale(1.1);
  }

  .theme-toggle-icon {
    font-size: 1.2rem;
    line-height: 1;
  }

  /* Mobile Navigation */
  @media (max-width: 768px) {
    .nav {
      flex-direction: column;
      height: auto;
      padding: var(--space-2) 0;
      gap: var(--space-2);
    }

    .nav-links {
      width: 100%;
      justify-content: space-between;
    }
  }
</style>

<script>
  // Theme toggle functionality
  const themeToggle = document.querySelector('.theme-toggle');
  const themeIcon = document.querySelector('.theme-toggle-icon');

  function updateThemeIcon() {
    const isLight = document.documentElement.classList.contains('light-mode');
    themeIcon.textContent = isLight ? '🌙' : '☀️';
  }

  updateThemeIcon();

  themeToggle.addEventListener('click', () => {
    document.dispatchEvent(new Event('theme-toggle'));
    updateThemeIcon();
  });

  // Set active nav link based on current path
  const currentPath = window.location.pathname;
  const navLinks = document.querySelectorAll('.nav-link');
  
  navLinks.forEach(link => {
    const linkPath = link.getAttribute('href');
    if (currentPath === linkPath || 
        (linkPath !== '/' && currentPath.startsWith(linkPath))) {
      link.classList.add('active');
    }
  });
</script>