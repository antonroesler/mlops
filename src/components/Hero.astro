<section class="hero">
  <div class="hero-content">
    <h1 class="hero-title mono">MLOps</h1>
    <p class="hero-subtitle">Scalable Machine Learning in Practice</p>
    <div class="scroll-indicator">
      <a href="#about" aria-label="Scroll to about section">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M7 13l5 5 5-5M7 6l5 5 5-5"/></svg>
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: relative;
  }

  .hero-content {
    max-width: 800px;
  }

  .hero-title {
    font-size: clamp(6rem, 15vw, 12rem);
    margin-bottom: var(--space-2);
    background: linear-gradient(135deg, var(--color-accent) 0%, #9c64e2 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    letter-spacing: 2px;
    font-weight: 900;
    text-shadow: 0 2px 15px rgba(157, 78, 221, 0.3);
  }

  .hero-subtitle {
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    color: #1a237e;
    margin-bottom: var(--space-4);
    font-weight: 500;
  }

  .scroll-indicator {
    position: absolute;
    bottom: var(--space-4);
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
  }

  .scroll-indicator svg {
    color: var(--color-text-secondary);
    transition: color var(--transition-fast);
  }

  .scroll-indicator:hover svg {
    color: var(--color-text-primary);
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0) translateX(-50%);
    }
    40% {
      transform: translateY(-10px) translateX(-50%);
    }
    60% {
      transform: translateY(-5px) translateX(-50%);
    }
  }

  @media (max-width: 768px) {
    .hero {
      height: calc(80vh - 80px);
    }
  }
</style>